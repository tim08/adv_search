<div class="content" style="min-height: 500px;     background-color: #F7F5F4;">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <h4><%= @companies[:message] %></h4>


        <% @companies[:companies].each do |company| %>

            <div class="media">
              <div class="row">

                <div class="col-md-2 col-xs-2">

                  <%= link_to(adv_agency_path(company), class: 'pull-left') do %>
                      <%= image_tag company.logo.url(:thumb), class: 'media-object', height: '80', width: '100' %>
                  <% end %>
                </div>
                <div class="col-md-7 col-xs-5" style="padding-top:15px">
                  <div class="media-body" style="padding-left: 10px">
                    <h4 class="media-heading"><%= company.name %></h4>
                    <%= company.slogan %>
                  </div>
                </div>


                <div class="col-md-2" style="padding-top:15px">
                  <%= link_to 'Смотреть', adv_agency_path(company), class: 'btn btn-action btn-xs' %>
                </div>


              </div>
            </div>
            <div class="row" style="border-bottom: 1px solid #eee;padding-top: 5px"></div>
        <% end %>
      </div>
      <div class="col-md-3">
        <h4>Новости рынка</h4>
        <ul>
          <% @projects_news.each do |cn| %>
              <li><%= link_to "#{cn.projects.last.name}<br /> #{cn.name}".html_safe, adv_agency_path(cn) %></li>
          <% end %>
        </ul>

        <h4>Отзывы рекламодателей</h4>
        <ul>
          <% @reviews.each do |review| %>
              <li><%= link_to "#{review.reviews.last.name} оставил(а) отзыв на компанию #{review.name}", adv_agency_path(review) %></li>
          <% end %>
        </ul>

        <h4>Почитать статьи</h4>
        <ul>
          <% @articles.each do |article| %>
              <li><%= link_to article.title, main_article_path(article) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>