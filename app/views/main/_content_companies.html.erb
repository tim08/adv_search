<div class="content" style="min-height: 500px;     background-color: #F7F5F4;">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <h4><%= @companies[:message] %></h4>


        <% @companies[:companies].each do |company| %>
            <div class="media">
              <div class="row">
                <div class="col-md-8">
                  <a class="pull-left" href="#">
                    <%= image_tag company.logo.url(:thumb), class: 'media-object' %>
                  </a>
                  <div class="media-body" style="padding-left: 10px">
                    <h4 class="media-heading"><%= company.name %></h4>
                    <%= company.slogan %>
                  </div>
                </div>
                <div class="col-md-2">

                  <%= link_to 'Смотреть', adv_agency_path(company), class: 'btn btn-action btn-xs' %>

                </div>

              </div>
            </div>
            <div class="row" style="border-bottom: 1px solid #eee;padding-top: 5px"></div>
        <% end %>
        <% @companies %>
      </div>
      <div class="col-md-3">
        <h4>Новости</h4>
        <ul>
          <% @projects_news.each do |cn| %>
              <li><%= link_to "#{cn.name}<br /> #{cn.projects.last.name}".html_safe, adv_agency_path(cn) %></li>
          <% end %>
        </ul>

        <h4>Отзывы</h4>
        <ul>
          <% @reviews.each do |review| %>
              <li><%= link_to "#{review.reviews.last.name} оставил отзыв на компанию #{review.name}", adv_agency_path(review) %></li>
          <% end %>
        </ul>

        <h4>Почитать</h4>
        <ul>
          <li>Облако тегов</li>
          <li>Реклама PR</li>
          <li>BTL event маркетинг</li>
        </ul>
        <a href="">Все статьи</a>
      </div>
    </div>
  </div>
</div>