<div class="container">

  <ol class="breadcrumb">
  </ol>

  <div class="row">

    <!-- Article main content -->
    <article class="col-xs-12 maincontent">
      <header class="page-header">
        <h1 class="page-title">Добро пожаловать</h1>
      </header>

      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3 class="thin text-center">Вход в систему Promo Wind</h3>

            <hr>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="top-margin">
                  <label>Email <span class="text-danger">*</span></label>
                  <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                </div>

                <div class="top-margin">
                  <label>Пароль <span class="text-danger">*</span></label>
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                </div>

                <div class="top-margin">
                  <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <label>Запомнить пароль</label>
                      </div>
                  <% end -%>
                </div>

                <div class="row">
                  <div class="col-lg-8">
                    <b><%= link_to "Забыли пароль?", new_password_path(resource_name) %><br/></b>
                  </div>
                  <div class="col-lg-4 text-right">
                    <%= f.submit "Войти", class: "btn btn-action" %>
                  </div>
                </div>
            <% end %>
          </div>
        </div>

      </div>

    </article>
    <!-- /Article -->

  </div>
</div>




