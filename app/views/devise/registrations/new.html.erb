<header id="head" class="secondary"></header>

<div class="container">

  <ol class="breadcrumb">
  </ol>

  <div class="row">

    <!-- Article main content -->
    <article class="col-xs-12 maincontent">
      <header class="page-header">
        <h1 class="page-title">Зарегистрируйте свою компанию</h1>
      </header>

      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3 class="thin text-center">Cоздание учётной записи</h3>
            <p class="text-center text-muted">Используя сервис Promo Wind, Вы принимаете данное  <a href="">соглашение</a> </p>
            <hr>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="top-margin">
                  <label>Email <span class="text-danger">*</span></label>
                  <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                </div>

                <div class="top-margin">
                  <label>Пароль <span class="text-danger">*</span></label>
                  <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> символов минимум)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                </div>

                <div class="top-margin">
                  <label>Подтвердите пароль <span class="text-danger">*</span></label>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
                </div>
                <hr>

                <div class="row">
                  <div class="col-lg-6">
                    <b><%= link_to "Забыли пароль?", new_password_path(resource_name) %><br /></b>
                  </div>
                  <div class="col-lg-4 text-right">
                    <%= f.submit "Зарегистрироваться", class: "btn btn-action" %>
                  </div>
                </div>
            <% end %>

          </div>
        </div>

      </div>

    </article>
    <!-- /Article -->

  </div>
</div>



