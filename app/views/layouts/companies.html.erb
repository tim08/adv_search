<!DOCTYPE html>
<html>
<head>
  <title>PromoWind - сервис поиска рекламных компаний</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'admins', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= yield :head %>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to (companies_path), {:class => 'navbar-brand'} do %>
          <span class="glyphicon glyphicon-globe"></span>
          Личный кабинет исполнителя
      <% end %>

    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <!--<li><a href="#">Настройки аккаунта</a></li>-->
        <li><%= link_to 'Помощь', help_company_path(@company) %></li>
        <li><%= link_to 'Выйти', destroy_company_session_path, method: :delete %></li>
      </ul>
      <form class="navbar-form navbar-right">
        <!--<input type="text" class="form-control" placeholder="Тут будет поиск">-->
      </form>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li class="<%= current_page?(companies_path) ? 'active' : '' %>">
          <%= link_to (companies_path) do %>
              <span class="glyphicon glyphicon-list-alt"></span>
              Профиль
          <% end %>
        </li>
        <li class="<%= current_page?(edit_company_path(@company)) ? 'active' : '' %>">
          <%= link_to (edit_company_path(@company)) do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Обновить данные
          <% end %>
        </li>
        <li class="<%= current_page?(promo_requests_company_path(@company)) ? 'active' : '' %>">
          <%= link_to (promo_requests_company_path(@company)) do %>
            <span class="glyphicon glyphicon-envelope"></span>
            Мои заявки
          <% end %>
        </li>
        <li class="<%= current_page?(company_projects_path(@company)) ? 'active' : '' %>">
          <%= link_to (company_projects_path(@company)) do %>
              <span class="glyphicon glyphicon-briefcase"></span>
            Мои проекты
          <% end %>
        </li>
        <li class="<%= current_page?(company_articles_path(@company)) ? 'active' : '' %>">
          <%= link_to (company_articles_path(@company)) do %>
            <span class="glyphicon glyphicon-book"></span>
            Мои публикации
          <% end %>
        </li>
        <li class="<%= current_page?(payment_company_path(@company)) ? 'active' : '' %>">
          <%= link_to payment_company_path(@company) do %>
              <span class="glyphicon glyphicon-star"></span>
            PRO функции
          <% end %>
        </li>
        <li class="<%= current_page?(statistics_company_path(@company)) ? 'active' : '' %>">
          <%= link_to statistics_company_path(@company) do %>
              <span class="glyphicon glyphicon-eye-open"></span>
              Статистика
          <% end %>
        </li>
      </ul>
      <ul class="nav nav-sidebar">
        <li><a href="">Отчеты</a></li>
      </ul>

    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <%= yield %>
    </div>
  </div>
</div>
<footer class="footer">
  <p>© 2017 Название компании, Inc.</p>
</footer>
</body>
</html>

<style>
  /*
 * Base structure
 */

  /* Move down content because we have a fixed navbar that is 50px tall */
  body {
    padding-top: 50px;
  }

  /*
   * Global add-ons
   */

  .sub-header {
    padding-bottom: 10px;
    border-bottom: 1px solid #eee;
  }
  span{
    padding-right: 5px;
  }

  /*
   * Sidebar
   */

  /* Hide for mobile, show later */
  .sidebar {
    display: none;
  }

  @media (min-width: 768px) {
    .sidebar {
      position: fixed;
      top: 51px;
      bottom: 0;
      left: 0;
      z-index: 1000;
      display: block;
      padding: 20px;
      overflow-x: hidden;
      overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
      background-color: #f5f5f5;
      border-right: 1px solid #eee;
    }
  }

  /* Sidebar navigation */
  .nav-sidebar {
    margin-right: -21px; /* 20px padding + 1px border */
    margin-bottom: 20px;
    margin-left: -20px;
  }

  .nav-sidebar > li > a {
    padding-right: 20px;
    padding-left: 20px;
  }

  .nav-sidebar > .active > a {
    color: #fff;
    background-color: #428bca;
  }

  /*
   * Main content
   */

  .main {
    padding: 20px;
  }

  @media (min-width: 768px) {
    .main {
      padding-right: 40px;
      padding-left: 40px;
    }
  }

  .main .page-header {
    margin-top: 0;
  }

  /*
   * Placeholder dashboard ideas
   */

  .placeholders {
    margin-bottom: 30px;
    text-align: center;
  }

  .placeholders h4 {
    margin-bottom: 0;
  }

  .placeholder {
    margin-bottom: 20px;
  }

  .placeholder img {
    display: inline-block;
    border-radius: 50%;
  }

</style>
