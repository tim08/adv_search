<p id="notice"><%= notice %></p>

<h1 class="page-header">Мои проекты (Портфолио)</h1>
<div class="row">
  <div class="col-md-12">
    <span class="label label-warning">Добавьте Ваши рекламные проекты, эту информацию увидят потенциальные клиенты</span>
  </div>
</div>
<br>
<%= link_to 'Добавить новый проект', new_company_project_path, class: 'btn btn-default' %>
<br>
<br>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Заказчик</th>
      <th>Описание</th>
      <th>Изображение</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.client %></td>
        <td><%= project.description %></td>
        <td><%= image_tag project.logo.url(:thumb) %></td>
        <td><%= link_to 'Редактировать', edit_company_project_path(@company, project) %></td>
        <td><%= link_to 'Удалить', company_project_path(@company, project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


