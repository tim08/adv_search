<h1 class="page-header">Наши проекты</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', company_project_path(@company, project) %></td>
        <td><%= link_to 'Edit', edit_company_project_path(@company, project) %></td>
        <td><%= link_to 'Destroy', company_project_path(@company, project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

