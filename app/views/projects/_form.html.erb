<%= form_for([@company, @project]) do |form| %>
    <% if project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
            <% project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, id: :project_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :client %>
          <%= form.text_field :client, id: :project_client, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, id: :project_description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :logo %>
          <%= form.file_field :logo, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= form.submit 'Сохранить данные', class: 'btn btn-default' %>
        </div>
      </div>
    </div>
<% end %>
