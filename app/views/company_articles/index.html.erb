<p id="notice"><%= notice %></p>

<h1 class="page-header">Публикации</h1>
<div class="row">
  <div class="col-md-12">
    <span class="label label-warning">Статьи публикуют только исполнители с премиум аккаунтами</span>
  </div>
</div>
<br>
<%= link_to 'Добавить новую статью', new_company_article_path, class: 'btn btn-default' %>
<br><br>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Картинка</th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td style="min-width: 150px"><%= article.title %></td>
        <td><%= image_tag article.logo.url(:thumb) %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Просмотр', company_article_path(@company, article) %></td>
        <td><%= link_to 'Редактировать', edit_company_article_path(@company, article) %></td>
        <td><%= link_to 'Удалить', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

